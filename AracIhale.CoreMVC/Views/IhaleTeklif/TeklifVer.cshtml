@model AracIhale.CoreMVC.Models.VM.IhaleTeklif


    @using System.Runtime.Serialization
    @using AracIhale.CoreMVC.Extension;
    @using Microsoft.AspNetCore.Http
    @using AracIhale.CoreMVC.Enums

    @inject IHttpContextAccessor HttpContextAccessor
    @{


        ViewData["Title"] = "TeklifVer";
        var kullaniciID = HttpContextAccessor.HttpContext?.Session.MySessionGet<int>("KullaniciID");
    }


<h1>Teklif Ver</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TeklifVer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
             
                <input asp-for="IhaleID" class="form-control" type="hidden" />
                <span asp-validation-for="IhaleID" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="KullaniciID" class="form-control" value="@kullaniciID" readonly type="hidden" />
                <span asp-validation-for="KullaniciID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeklifFiyati" class="control-label"></label>
                <input asp-for="TeklifFiyati" class="form-control" />
                <span asp-validation-for="TeklifFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeklifTarihi" class="control-label"></label>
                <input asp-for="TeklifTarihi" class="form-control" />
                <span asp-validation-for="TeklifTarihi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Teklif Ver" class="btn btn-primary" onclick="return confirmTeklif()" />
            </div>

    
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">İhale Listesine Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function confirmTeklif() {
        return confirm('Teklifiniz başarıyla gerçekleştirildi.');
    }

</script>